<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBase"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_weight_item_height"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


        <TextView
            android:id="@+id/textDate"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textFat"
            style="@style/TitleListWeightText"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:scaleX="1"
            android:scaleY="1"
            android:text="@string/list_fat_default"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/textWeight"
            app:layout_constraintTop_toTopOf="@+id/textWeight"/>

        <ToggleButton
            android:id="@+id/toggleDumbbell"
            android:layout_width="@dimen/stamp_list_side"
            android:layout_height="@dimen/stamp_list_side"
            android:layout_marginStart="-56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stamp_dumbbell"
            android:enabled="false"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textFat"
            app:layout_constraintTop_toBottomOf="@+id/textDate"
            app:layout_constraintVertical_bias="0.0"/>

        <ToggleButton
            android:id="@+id/toggleLiquor"
            android:layout_width="@dimen/stamp_list_side"
            android:layout_height="@dimen/stamp_list_side"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stamp_liquor"
            android:enabled="false"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintLeft_toRightOf="@+id/toggleDumbbell"
            app:layout_constraintTop_toBottomOf="@+id/textDate"/>

        <ToggleButton
            android:id="@+id/toggleToilet"
            android:layout_width="@dimen/stamp_list_side"
            android:layout_height="@dimen/stamp_list_side"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stamp_toilet"
            android:elevation="18dp"
            android:enabled="false"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/toggleLiquor"
            app:layout_constraintTop_toBottomOf="@+id/textDate"
            app:layout_constraintVertical_bias="0.0"/>

        <ToggleButton
            android:id="@+id/toggleMoon"
            android:layout_width="@dimen/stamp_list_side"
            android:layout_height="@dimen/stamp_list_side"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stamp_moon"
            android:enabled="false"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/toggleToilet"
            app:layout_constraintTop_toBottomOf="@+id/textDate"
            app:layout_constraintVertical_bias="0.0"/>

        <ToggleButton
            android:id="@+id/toggleStar"
            android:layout_width="@dimen/stamp_list_side"
            android:layout_height="@dimen/stamp_list_side"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/stamp_star"
            android:enabled="false"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/toggleMoon"
            app:layout_constraintTop_toBottomOf="@+id/textDate"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/textMemo"
            style="@style/TitleSmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@null"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWeight"/>

        <TextView
            android:id="@+id/textWeight"
            style="@style/TitleListWeightText"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:scaleX="1"
            android:scaleY="1"
            android:text="@string/list_weight_default"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textDate"
            tools:layout_editor_absoluteX="20dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>