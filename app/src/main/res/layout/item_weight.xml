<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/list_weight_item_height"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textDate"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textWeight"
        style="@style/TitleListWeightText"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:scaleX="1"
        android:scaleY="1"
        android:text="@string/list_weight_default"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        tools:layout_editor_absoluteX="16dp"/>

    <TextView
        android:id="@+id/textFat"
        style="@style/TitleListWeightText"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:scaleX="1"
        android:scaleY="1"
        android:text="@string/list_fat_default"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/textWeight"
        app:layout_constraintTop_toTopOf="@+id/textWeight"/>

    <ToggleButton
        android:id="@+id/toggleDumbbell"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="8dp"
        android:background="@drawable/stamp_dumbbell"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintLeft_toRightOf="@+id/textFat"
        tools:layout_editor_absoluteY="36dp"/>

    <ToggleButton
        android:id="@+id/toggleLiquor"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_liquor"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintLeft_toRightOf="@+id/toggleDumbbell"
        tools:layout_editor_absoluteY="36dp"/>

    <ToggleButton
        android:id="@+id/toggleToilet"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_toilet"
        android:elevation="18dp"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintLeft_toRightOf="@+id/toggleLiquor"
        tools:layout_editor_absoluteY="36dp"/>

    <ToggleButton
        android:id="@+id/toggleMoon"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_moon"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintLeft_toRightOf="@+id/toggleToilet"
        tools:layout_editor_absoluteY="36dp"/>

    <ToggleButton
        android:id="@+id/toggleStar"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_star"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintLeft_toRightOf="@+id/toggleMoon"
        tools:layout_editor_absoluteY="36dp"/>

    <TextView
        android:id="@+id/textMemo"
        style="@style/TitleSmallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="aaaa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWeight"/>

</android.support.constraint.ConstraintLayout>