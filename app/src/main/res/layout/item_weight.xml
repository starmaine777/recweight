<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/list_weight_item_height"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textDate"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/07/14"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textWeight"
        style="@style/TitleListWeightText"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:scaleX="1.2"
        android:scaleY="1.8"
        android:text="@string/list_weight_default"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        tools:layout_editor_absoluteX="21dp"/>

    <TextView
        android:id="@+id/textFat"
        style="@style/TitleListWeightText"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:scaleX="1.2"
        android:scaleY="1.8"
        android:text="@string/list_fat_default"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/textWeight"
        app:layout_constraintTop_toTopOf="@+id/textWeight"/>

    <ToggleButton
        android:id="@+id/toggleDumbbell"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:background="@drawable/stamp_dumbbell"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="@+id/toggleToilet"
        app:layout_constraintTop_toTopOf="@+id/toggleToilet"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/toggleLiquor"/>

    <ToggleButton
        android:id="@+id/toggleLiquor"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_liquor"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="@+id/toggleDumbbell"
        app:layout_constraintTop_toTopOf="@+id/toggleDumbbell"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="248dp"/>

    <ToggleButton
        android:id="@+id/toggleToilet"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_toilet"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toggleLiquor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ToggleButton
        android:id="@+id/toggleMoon"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_moon"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="@+id/toggleToilet"
        app:layout_constraintTop_toTopOf="@+id/toggleToilet"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="296dp"/>

    <ToggleButton
        android:id="@+id/toggleStar"
        android:layout_width="@dimen/stamp_list_side"
        android:layout_height="@dimen/stamp_list_side"
        android:layout_marginLeft="0dp"
        android:background="@drawable/stamp_star"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        app:layout_constraintBottom_toBottomOf="@+id/toggleMoon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/toggleMoon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toggleMoon"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>